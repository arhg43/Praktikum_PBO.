<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #eef4ff; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.autorent.controller.admin.EditDataController">

    <VBox alignment="TOP_LEFT" layoutX="50.0" layoutY="30.0" spacing="15.0">
        <!-- Judul -->
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Edit Data" />

        <!-- Input Merk Mobil -->
        <TextField fx:id="merkMobilField" prefHeight="30" prefWidth="500" promptText="Merk Mobil"
                   style="-fx-background-color: transparent; -fx-border-color: transparent transparent #ccc transparent;" />

        <!-- Input Plat Nomor -->
        <TextField fx:id="platNomorField" prefHeight="30" prefWidth="500" promptText="Plat Nomor"
                   style="-fx-background-color: transparent; -fx-border-color: transparent transparent #ccc transparent;" />

        <!-- Input Harga -->
        <TextField fx:id="hargaField" prefHeight="30" prefWidth="500" promptText="Harga"
                   style="-fx-background-color: transparent; -fx-border-color: transparent transparent #ccc transparent;" />

        <!-- ImageView -->
        <ImageView fx:id="mobilImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />

        <!-- Tombol Browse -->
        <Button fx:id="btnBrowse" onAction="#handleBrowseImage" mnemonicParsing="false" text="Browse Gambar"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

        <!-- Tombol Edit Data -->
        <Button fx:id="EditButton" prefHeight="40" prefWidth="500"
                style="-fx-background-color: #367AF6; -fx-text-fill: white; -fx-font-weight: bold;"
                text="Edit Data"
                onAction="#handleEditData" />
    </VBox>
</AnchorPane>
